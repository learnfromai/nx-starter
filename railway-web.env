# Railway Environment Configuration for Web Application
# Copy this to your Railway project environment variables

# =============================================================================
# Build Configuration
# =============================================================================
NODE_ENV=production
ENVIRONMENT=production
PORT=${{RAILWAY_PORT}}

# =============================================================================
# API Configuration
# =============================================================================
# Update with your Railway API service URL
VITE_USE_API_BACKEND=true
VITE_API_BASE_URL=${{RAILWAY_API_URL}}
VITE_API_TIMEOUT=10000

# =============================================================================
# Application Settings
# =============================================================================
VITE_APP_NAME="Nx Starter"
VITE_APP_VERSION="1.0.0"
VITE_ENVIRONMENT=production

# Debug and Logging
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_AUTH=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# Storage Configuration
# =============================================================================
VITE_STORAGE_PREFIX="nx-starter"
VITE_SESSION_PREFIX="nx-starter-session"

# Cache Settings
VITE_CACHE_TIMEOUT=300000
VITE_MAX_CACHE_SIZE=50

# =============================================================================
# UI Settings
# =============================================================================
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATIONS_ENABLED=true
VITE_COMPACT_MODE=false