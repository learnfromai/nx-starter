{
  "name": "task-app-monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "dev:web": "pnpm --filter @task-app/web run dev",
    "dev:api": "pnpm --filter @task-app/api run dev",
    "build": "pnpm run build:shared && pnpm run build:packages",
    "build:shared": "pnpm --filter @task-app/shared run build",
    "build:packages": "pnpm --filter @task-app/web run build && pnpm --filter @task-app/api run build",
    "test": "pnpm --recursive run test",
    "test:watch": "pnpm --parallel run test:watch",
    "test:coverage": "pnpm --recursive run test:coverage",
    "test:e2e": "pnpm --filter @task-app/web run test:e2e",
    "lint": "pnpm --recursive run lint",
    "lint:fix": "pnpm --recursive run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm --recursive run clean && rm -rf dist",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.0.1",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react-testing-library": "^8.0.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vitest": "^3.2.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.15.4",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "mongodb-memory-server": "^10.1.4",
    "supertest": "^7.0.0",
    "tsx": "^4.19.3"
  }
}
