# Railway Environment Configuration for Web Application (Staging)
# Copy this to your Railway staging project environment variables

# =============================================================================
# Build Configuration
# =============================================================================
NODE_ENV=staging
ENVIRONMENT=staging
PORT=${{RAILWAY_PORT}}

# =============================================================================
# API Configuration
# =============================================================================
# Update with your Railway API staging service URL
VITE_USE_API_BACKEND=true
VITE_API_BASE_URL=${{RAILWAY_API_STAGING_URL}}
VITE_API_TIMEOUT=10000

# =============================================================================
# Application Settings
# =============================================================================
VITE_APP_NAME="Nx Starter (Staging)"
VITE_APP_VERSION="1.0.0-staging"
VITE_ENVIRONMENT=staging

# Debug and Logging (more verbose for staging)
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=debug

# =============================================================================
# Feature Flags
# =============================================================================
VITE_ENABLE_AUTH=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=false
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# Storage Configuration
# =============================================================================
VITE_STORAGE_PREFIX="nx-starter-staging"
VITE_SESSION_PREFIX="nx-starter-staging-session"

# Cache Settings
VITE_CACHE_TIMEOUT=300000
VITE_MAX_CACHE_SIZE=50

# =============================================================================
# UI Settings
# =============================================================================
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATIONS_ENABLED=true
VITE_COMPACT_MODE=false