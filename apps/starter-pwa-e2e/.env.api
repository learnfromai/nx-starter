# E2E Test Environment Configuration for API Backend
# Copy this file to .env.api when running E2E tests with API backend
# Usage: dotenv -e apps/starter-pwa-e2e/.env.api -- nx e2e starter-pwa-e2e

# Enable API backend for E2E tests
E2E_USE_API_BACKEND=true

# API server configuration for E2E tests
E2E_API_BASE_URL=http://localhost:4000

# PWA application configuration
VITE_USE_API_BACKEND=true
VITE_API_BASE_URL=http://localhost:4000

# API server environment
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
DB_TYPE=memory
DB_ORM=native