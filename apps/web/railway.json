{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm build:libs && pnpm build:web"
  },
  "deploy": {
    "staticFilePath": "dist/apps/web"
  },
  "environments": {
    "production": {
      "variables": {
        "VITE_ENVIRONMENT": "production",
        "VITE_USE_API_BACKEND": "true"
      }
    }
  }
}