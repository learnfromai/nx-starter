# =============================================================================
# RAILWAY WEB APPLICATION ENVIRONMENT VARIABLES
# =============================================================================
# For React applications, only variables prefixed with REACT_APP_ are available
# in the browser. Copy these to your Railway web service environment settings.

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Update this with your Railway API service URL
REACT_APP_API_BASE_URL=https://your-api-service.railway.app
REACT_APP_API_PREFIX=/api
REACT_APP_API_VERSION=v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
REACT_APP_NAME=Task App
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=A modern task management application
REACT_APP_ENVIRONMENT=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_ANALYTICS=true

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
REACT_APP_JWT_STORAGE_KEY=task_app_token
REACT_APP_JWT_REFRESH_STORAGE_KEY=task_app_refresh_token

# =============================================================================
# UI CONFIGURATION
# =============================================================================
REACT_APP_DEFAULT_THEME=light
REACT_APP_BRAND_NAME=Task App
REACT_APP_SUPPORT_EMAIL=support@your-domain.com

# =============================================================================
# PWA CONFIGURATION
# =============================================================================
REACT_APP_PWA_ENABLED=true
REACT_APP_PWA_NAME=Task App
REACT_APP_PWA_SHORT_NAME=TaskApp

# =============================================================================
# RAILWAY SPECIFIC NOTES
# =============================================================================
# Railway automatically sets:
# - NODE_ENV=production (for production deployments)
# - Railway provides automatic HTTPS
# - Static files are served with appropriate headers
# - Builds run in isolated containers