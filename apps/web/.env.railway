# =============================================================================
# RAILWAY PRODUCTION ENVIRONMENT CONFIGURATION - WEB APPLICATION
# Copy these values to your Railway web project environment variables
# =============================================================================

# =============================================================================
# Environment Configuration
# =============================================================================
VITE_ENVIRONMENT=production

# =============================================================================
# API Configuration
# =============================================================================

# API Backend Settings
VITE_USE_API_BACKEND=true
VITE_API_BASE_URL=https://your-api.railway.app
VITE_API_TIMEOUT=10000

# =============================================================================
# Feature Flags
# =============================================================================

# Authentication
VITE_ENABLE_AUTH=true

# PWA and Offline Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# Analytics
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# Application Settings
# =============================================================================

# Basic App Info
VITE_APP_NAME="NX Starter"
VITE_APP_VERSION="1.0.0"

# Debug and Logging (disabled in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# =============================================================================
# Storage Configuration
# =============================================================================

# Local Storage Prefixes
VITE_STORAGE_PREFIX="nx-starter-prod"
VITE_SESSION_PREFIX="nx-starter-session-prod"

# Cache Settings
VITE_CACHE_TIMEOUT=600000
VITE_MAX_CACHE_SIZE=100

# =============================================================================
# UI Settings
# =============================================================================

# Theme and Appearance
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATIONS_ENABLED=true
VITE_COMPACT_MODE=false

# =============================================================================
# Performance Configuration
# =============================================================================

# Bundle optimization
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Asset optimization
VITE_ASSET_INLINE_LIMIT=4096

# =============================================================================
# Analytics Configuration (Optional)
# =============================================================================

# Google Analytics (uncomment and set if needed)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Plausible Analytics (uncomment and set if needed)
# VITE_PLAUSIBLE_DOMAIN=your-domain.com

# =============================================================================
# Error Tracking (Optional)
# =============================================================================

# Sentry configuration (uncomment and set if needed)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_SENTRY_ENVIRONMENT=production

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy
VITE_CSP_ENABLED=true

# =============================================================================
# Railway-Specific Notes
# =============================================================================

# Railway automatically provides:
# - RAILWAY_DEPLOYMENT_ID
# - RAILWAY_DEPLOYMENT_DOMAIN  
# - RAILWAY_ENVIRONMENT
# - RAILWAY_PROJECT_ID
# - RAILWAY_SERVICE_ID

# The VITE_API_BASE_URL should point to your Railway API service URL
# Update this with your actual API service domain from Railway

# =============================================================================
# Production Checklist
# =============================================================================

# ✅ Set VITE_API_BASE_URL to your Railway API service URL
# ✅ Set VITE_ENVIRONMENT to "production"
# ✅ Disable debug mode (VITE_DEBUG_MODE=false)
# ✅ Set appropriate log level (VITE_LOG_LEVEL=error)
# ✅ Configure analytics if needed
# ✅ Set up error tracking if needed
# ✅ Test all features work with production API