# =============================================================================
# RAILWAY PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains environment variables for Railway.com deployment
# Set these variables in your Railway web service configuration

# Environment Configuration
VITE_ENVIRONMENT=production

# =============================================================================
# API Configuration
# =============================================================================

# API Backend Settings - Update with your Railway API service domain
VITE_USE_API_BACKEND=true
VITE_API_BASE_URL=https://your-api-service.railway.app
VITE_API_TIMEOUT=10000

# =============================================================================
# Feature Flags
# =============================================================================

# Authentication
VITE_ENABLE_AUTH=true

# PWA and Offline Features
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PWA=true

# Analytics
VITE_ENABLE_ANALYTICS=true

# =============================================================================
# Application Settings
# =============================================================================

# Basic App Info
VITE_APP_NAME="Nx Starter"
VITE_APP_VERSION="1.0.0"

# Debug and Logging (disabled in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# =============================================================================
# Storage Configuration
# =============================================================================

# Local Storage Prefixes
VITE_STORAGE_PREFIX="nx-starter"
VITE_SESSION_PREFIX="nx-starter-session"

# Cache Settings
VITE_CACHE_TIMEOUT=300000
VITE_MAX_CACHE_SIZE=50

# =============================================================================
# UI Settings
# =============================================================================

# Theme and Appearance
VITE_DEFAULT_THEME=system
VITE_DEFAULT_LANGUAGE=en
VITE_ANIMATIONS_ENABLED=true
VITE_COMPACT_MODE=false